{% extends 'base.html.twig' %}
{% block body %}{{ parent() }}
    <h1>Rechercher les tarifs :</h1>
    <div class="container mt-5">

        <div class="mt-3">
            {{ form_start(form) }}
            {{ form_row(form.pet) }}
        </div>
        <div class="mt-3">
            {{ form_row(form.medical_treatment) }}
        </div>
        <div class="mt-3">
            <button class="btn btn-success">Rechercher</button>
        </div>

        {{ form_end(form) }}

    </div>
    <div class="container mt-4">
        <h2>Les prix</h2>

        <div class="row">
            {% for dispense in dispenses %}
                <div class="col-md-4">
                    {% include 'dispense/_dispense.html.twig' %}
                </div>
            {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(dispenses) }}
        </div>
    </div>

{% endblock %}
